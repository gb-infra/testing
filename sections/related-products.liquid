<div class="car-head-cont">
  <p class="car-head">{{section.settings.sectionHead}}</p>
  <div class="dummy-left">&#60;</div>
  <div class="dummy-right">&#62;</div>
  <a class="viewAllAnchorTag" href="{{section.settings.view}}"><p class="view-all">View All</p></a>
</div>
<div class="outer-car">
<div class="uk-position-relative uk-visible-toggle uk-light items-cont gg-cover" tabindex="-1" uk-slider="finite: true;">

<ul class="uk-slider-items uk-grid">
  {% assign col = section.settings.collectionHandle %}
  {% for product in collections[col].products %}
               <li class="slider-item">
                     {%comment%}<div class="outer-card">
                     <div class="card">   
                       
                      <img class ="card_img" src ="{{ product | img_url: '600x'}}" />
                      <p class="prod-type">{{product.type}}</p>
                      <a class="prod-title" href="{{product.url}}">{{ product.title }}</a>
                       {% render 'judgeme_widgets', widget_type: 'judgeme_preview_badge', concierge_install: true, product: product %}
                       <div class="prod-price"><span class="rup-sym">â‚¹&nbsp</span>{{product.price | divided_by: 100 }}</div>

                       <div class="form-container">
                       <form class="custom-but_test" action="/cart/add" method="post" id="product-form-{{product.id}}">   
        	     <input type="hidden" name="id" value="{{product.variants[0].id}}">        
          	      <button class="atc1" type=" submit " name="add" class="action_button btn btn--add-to-cart btn--secondary-accent icon-cart">Add to Cart</button>                  
      		      <input type="hidden" name="discount" value=" "></form>
                 </div>

                    </div>
<!--                    <div >ADD TO CART</div> -->
                    
              </div>{%endcomment%}
                 {%include 'product-grid-item-new'%}
             </li>
                {% endfor %}
     </ul>
  
