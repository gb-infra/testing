    display: none;
  }
  .view-all{
    font-family: 'Poppins';
    text-align: center;
    text-decoration: underline;
        margin-bottom: 16px;
  }
  @media only screen and (max-width: 600px){
      .video_contain iframe{
    height: 112px;
  }
    .items-cont{
    	width: 100%;
    }
    .uk-position-relative{
      width: 100% !important;
      padding: 0 10px;
    } 
    .head4{
      display: none;
    }
    .head5{
   	  display: block;
      font-size: 16px !important;
    }
  }
  
  @media (max-width: 768px){
    .outer-trending{
      margin-bottom: 20px;
    }
  }
  
  @media (min-width: 769px){
    .video_container{
      max-width: 4257px;
      margin: 0 auto;
    }
    .head4{
      margin-top: 40px;
    }
    .head5{
      margin-top: 10px;
    }
    .outer-trending{
      margin-bottom: 60px;
    }
  }
  .xyz{
    margin:auto 13vw; 
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 15px 0;
  }
  .xyz div{
    padding: 0 5px;
  }
  .owl-nav img {
    width: 16px;
  }
  .owl-nav .owl-prev {
    position: absolute !important;
    top: 45%;
    left: -10px;
    cursor: pointer;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    text-align: center;
    background-color: #fff !important;
    z-index: 999 !important;
    font-weight: 900;
    color: black;
    box-shadow: 1px 1px 5px black;
    visibility: initial !important;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32px;
  }
  .owl-nav .owl-next {
    position: absolute !important;
    top: 45%;
    right: -10px;
    cursor: pointer;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    text-align: center;
    background-color: #fff !important;
    z-index: 999 !important;
    font-weight: 900;
    color: black;
    box-shadow: 1px 1px 5px black;
    visibility: initial !important;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32px;
  }
  @media only screen and (max-width: 749px){
    .container_video .video_title {
    font-size: 14px !important;
    margin: 8px 0 16px;
    }
    .xyz{
      margin: auto 4vw;
    }
    .owl-nav {
      display: none;
    }
    .container_video{
          padding:0 0 0 8px;
          margin-bttom: 8px;
    }
  }
  .video_card_desktop{
    display: none !important;
  }
  .video_card_mobile{
    display: block !important;
  }
  @media (min-width: 748px){
    .video_card_desktop{
      display: block !important;
    }
    .video_card_mobile{
      display: none !important;
    }
  }
  .video_card_desktop{
    width: 94%;
  }
  .kit_container{
    margin-top: 5px;
  }
  .video_title{
    font-size: 18px !important;
    font-weight: 600;
    text-transform: uppercase;
    color: black;
    line-height: 20px;
    margin: 20px 0;
  }
</style>
<div class="container_video">
<div class="video_container">
    <div class="head4">
<!--       <span class="collection-products__slider-arrow collection-products__slider-arrow--prev js-collection-products-prev"> &#60;&nbsp;&nbsp;&nbsp;&nbsp; </span> -->
        {{ section.settings.heading }}
<!--       <span class="collection-products__slider-arrow collection-products__slider-arrow--next js-collection-products-next"> &nbsp;&nbsp;&nbsp;&nbsp;&#62; </span> -->
    </div>
    <div class="head5">
<!--       <span class="collection-products__slider-arrow collection-products__slider-arrow--prev js-collection-products-prev"> &#60;&nbsp;&nbsp; </span> -->
        {{ section.settings.heading }}
<!--       <span class="collection-products__slider-arrow collection-products__slider-arrow--next js-collection-products-next">&nbsp;&nbsp;&#62; </span> -->
    </div>
  
 		 <div class="collection-products__slider-wrapper kit_container">
				<div class="owl-carousel video_slider">
					{% for block in section.blocks %}
                    {% case block.type %}
                    {% when 'slide' %}
                    {% if block.settings.video_thumbnail_D != blank %}
                      <div>
                        <a>
<!--                           <img class="video_card_mobile card_img0" src="{{ block.settings.video_thumbnail_M |  img_url: 'master' }}" alt=""/> -->
                          <img class=" card_img0" video-src="{{ block.settings.video_link }}" src="{{ block.settings.video_thumbnail_D |  img_url: 'master' }}" alt=""/>
                          <div class="video_contain"></div>
                        </a>
                        {% if block.settings.video_title != blank %}
                        	<p class="video_title">{{ block.settings.video_title }}</p>
                        {% endif %}
                      </div>
                    {% endif %}
                    {% endcase %}
                    {% endfor %}
				</div>
			</div>
</div>
</div>

<script>
  
