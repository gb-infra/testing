<style>
  .testimonial-container .owl-carousel .owl-nav button.owl-prev, .owl-carousel .owl-nav button.owl-next, .owl-carousel button.owl-dot {
    box-shadow: none;
    background-color: transparent !important;
    width: 38px;
    height: 38px;
  }
  .testimonial-container .owl-nav img {
    width: 40px;
  }
  .testimonial-container .owl-nav .owl-prev{
    position: absolute;
    top: -8%;
    left: 89.4%;
  }
  .testimonial-container .owl-nav .owl-next{
    position: absolute;
    top: -8%;
    right: 3.8%;
  }
  .testimonial-container{
    background-image: url(https://cdn.shopify.com/s/files/1/0633/3730/0223/t/2/assets/Group_20276.png?v=1647348215);
    min-height: 636px;
    padding: 60px;
  }
  .heading-container{
    padding: 0 30px;
  }
  .container-heading,.container-subheading{
    text-transform: uppercase;
    font-size: 64px;
    font-weight: 700;
    line-height: 76px;
    font-family: 'poppins';
  }
  .card-container{
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    padding: 24px;
  }
  .testimonial-card{
    background-color: white;
    margin: 20px;
    padding: 20px 30px;
    border-radius: 6px;
    max-height: 48vh;
    min-height: 48vh;
  }
  .card-heading{
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 600;
    font-size: 16px;
    line-height: 20px;
    display: flex;
    align-items: center;
  }
  .card-subheading{
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 24px;
    align-items: center;
    color: #323232;
    margin-top: 20px;
  }
  .card-bottom{
    display: flex;
    justify-content: space-between;
    margin-top: 24px;
  }
  .rating{
  }
  .checked{
  }
  .user-information{
    display: flex;
  }
  .user-image img{
    border-radius: 50%;
    max-width: 30px;
    margin: 0 10px;
  }
  .user-location,.user-name{
    font-family: 'Poppins';
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    line-height: 18px;
    display: flex;
    align-items: center;
    color: #DCDCDC;
  }
  .user-name{
    color: #000000;    
    margin: 0 5px;
  }
  .scroll-buttons{
    float: right;
    display: flex;
    padding: 0 40px;
  }
  .move-left,.move-right{
    background: #F0F0F0;
    border-radius: 6px;
    padding: 12px;
    margin: 4px;
    margin-top: -30px;
  }
  .checked{
    color: #FFA800;
    border-color: #FFA800;
  }
  @media (max-width: 769px){
    .testimonial-container{
      background-image: none;
      background-color: #D9E031;
      min-height: 0;
      padding: 0;
    }
    .container-heading, .container-subheading {
      font-size: 28px;
      font-weight: 700;
      line-height: 33px;
    }
    .scroll-buttons {
      display: none;
    }
    .testimonial-card {
      margin: 12px;
      padding: 20px 8px;
    }
    .card-subheading {
      font-size: 12px;
      line-height: 18px;
      margin-top: 8px;
    }
    .user-image,.user-location{
      display: none;
    }
    .card-bottom{
      margin-top: 8px;
    }
    .container-heading{
      padding-top: 20px;
    }
    .heading-container {
      padding: 0 32px;
    }
    .card-container{
      padding: 24px 0px 20px 8px;
    }
  }
</style>
<div class="testimonial-container">
  <div class="heading-container">
    <p class="container-heading">{{ section.settings.heading }}</p>
    <p class="container-subheading">{{ section.settings.subheading }}</p>
  </div>
  
<!--   <div class="scroll-buttons">
    <div class="collection-products__slider-arrow collection-products__slider-arrow--prev js-collection-products-prev move-left">
      <i class='shoptimized-064'></i>
    </div>
    <div class="collection-products__slider-arrow collection-products__slider-arrow--next js-collection-products-next move-right">
      <i class='shoptimized-074'></i>
    </div>
  </div> -->
  
  <div class="card-container owl-carousel" id="testimonial-card">
    {% for block in section.blocks %}
    {% if block.settings.testimonial_heading != blank %}
      <div class="testimonial-card">
        <span class="card-heading">{{ block.settings.testimonial_heading }}</span>
        <span class="card-subheading">{{ block.settings.testimonial_description | truncate: 320 }}</span>
        <div class="card-bottom">
          <div class="rating">
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
          </div>
          <div class="user-information">
            {% if block.settings.user_image != blank %}
            	<div class="user-image"><img src="{{ block.settings.user_image | img_url }}"></div>
            {% endif %}
            <div class="user-location"><span>{{ block.settings.user_location }}</span></div>
            <div class="user-name"><span>{{ block.settings.user_name }}</span></div>
          </div>
      </div>
    </div>
    {% endif %}
    {% endfor %}
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
<script>
  $('#testimonial-card').owlCarousel({
    loop:true,
    margin:0,
    nav:true,
    navText:['<img class="prev-icon" src="https://cdn.shopify.com/s/files/1/0633/3730/0223/t/2/assets/Button.png?v=1648554093">','<img class="next-icon" src="https://cdn.shopify.com/s/files/1/0633/3730/0223/t/2/assets/Button_1.png?v=1648554241">'],
    responsive:{
        0:{
            items:1.5
        },
        600:{
            items:3
        },
        1000:{
            items:3
        }
    }
})
</script>

{% schema %}
  {
    "name": "Absorbia Testimonials",
    "settings": [
		{
          "type": "text",
          "id": "heading",
          "label": "Heading"
		},
		{
          "type": "text",
          "id": "subheading",
          "label": "Heading"
		}
	],
	"blocks":[
		{
			"name": "Add Testimonial",
			"type": "text",
			"settings": [
				{
					"type": "text",
					"id": "testimonial_heading",
					"label": "Heading"
				},
				{
					"type": "richtext",
					"id": "testimonial_description",
					"label": "Description"
				},
  				{
					"type": "image_picker",
					"id": "user_image",
					"label": "User Image"
				},
				{
					"type": "text",
					"id": "user_location",
					"label": "User Location"
				},
				{
					"type": "text",
					"id": "user_name",
					"label": "User Name"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Absorbia Testimonials",
			"category": "text"
		}
	]
  }
{% endschema %}

